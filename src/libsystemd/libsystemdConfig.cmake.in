@PACKAGE_INIT@

if (EXISTS "${PACKAGE_PREFIX_DIR}/include/systemd")
  find_package(PkgConfig REQUIRED)
  pkg_check_modules(MOUNT REQUIRED IMPORTED_TARGET GLOBAL mount)
  pkg_check_modules(CAP REQUIRED IMPORTED_TARGET GLOBAL libcap)
  find_library(RT_LIBRARY rt)
  find_package(lz4 CONFIG REQUIRED)
  find_package(liblzma CONFIG REQUIRED)
  find_package(zstd CONFIG REQUIRED)

  add_library(systemd::libsystemd INTERFACE IMPORTED)
  if(EXISTS "${PACKAGE_PREFIX_DIR}/lib/libsystemd.a")
    set_target_properties(systemd::libsystemd PROPERTIES
      INTERFACE_INCLUDE_DIRECTORIES   "${PACKAGE_PREFIX_DIR}/include"
      IMPORTED_LOCATION_DEBUG         "${PACKAGE_PREFIX_DIR}/debug/lib/libsystemd.a"
      IMPORTED_LOCATION_RELEASE       "${PACKAGE_PREFIX_DIR}/lib/libsystemd.a"
      IMPORTED_CONFIGURATIONS         "Debug;Release"
    )
  else()
    set_target_properties(systemd::libsystemd PROPERTIES
      INTERFACE_INCLUDE_DIRECTORIES   "${PACKAGE_PREFIX_DIR}/include"
      IMPORTED_LOCATION_DEBUG         "${PACKAGE_PREFIX_DIR}/debug/lib/libsystemd.so"
      IMPORTED_LOCATION_RELEASE       "${PACKAGE_PREFIX_DIR}/lib/libsystemd.so"
      IMPORTED_CONFIGURATIONS         "Debug;Release"
    )
  endif()


  target_link_libraries(systemd::libsystemd
    INTERFACE
      lz4::lz4
      LibLZMA::LibLZMA
      $<IF:$<TARGET_EXISTS:zstd::libzstd_shared>,zstd::libzstd_shared,zstd::libzstd_static>
      PkgConfig::MOUNT
      PkgConfig::CAP
      ${RT_LIBRARY}
  )

  set(systemd_FOUND TRUE)
else()
  set(systemd_FOUND FALSE)
endif()
