#!/bin/sh

if [ -x /bin/plymouth ]; then
    /bin/plymouth --wait quit
fi

echo "You are in $1 mode. After logging in, type \"journalctl -xb\" to view"
echo "system logs, \"systemctl reboot\" to reboot, \"systemctl start default.target\""
echo "or \"exit\" to boot into default mode."

@SULOGIN@
@SYSTEMCTL@ --no-block start default.target
