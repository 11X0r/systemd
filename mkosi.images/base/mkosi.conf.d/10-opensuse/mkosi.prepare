#!/bin/bash
# SPDX-License-Identifier: LGPL-2.1-or-later
set -e

if [ ! -d rpm/ ]; then
    exit 0
fi

if [ "$1" = "final" ]; then
    DEPS="--requires"
else
    DEPS="--buildrequires"
fi

mkosi-chroot \
    rpmspec \
    --with upstream \
    --query \
    "$DEPS" \
    --define "_topdir /var/tmp" \
    --define "_sourcedir rpm" \
    rpm/systemd.spec |
        grep --invert-match --regexp systemd --regexp /bin/sh --regexp "rpmlib(" --regexp udev |
        sort --unique |
        tee /tmp/buildrequires |
        xargs --delimiter '\n' mkosi-install

if [ "$1" = "final" ]; then
    exit 0
fi

until mkosi-chroot \
    rpmbuild \
    -bd \
    --build-in-place \
    --with upstream \
    --define "_topdir /var/tmp" \
    --define "_sourcedir rpm" \
    --define "_build_name_fmt %%{NAME}-%%{VERSION}-%%{RELEASE}.%%{ARCH}.rpm" \
    rpm/systemd.spec
do
    EXIT_STATUS=$?
    if [ $EXIT_STATUS -ne 11 ]; then
        exit $EXIT_STATUS
    fi

    mkosi-chroot \
        rpm \
        --query \
        --package \
        --requires \
        /var/tmp/SRPMS/systemd-*.buildreqs.nosrc.rpm |
            grep --invert-match '^rpmlib(' |
            sort --unique >/tmp/dynamic-buildrequires

    sort /tmp/buildrequires /tmp/dynamic-buildrequires |
        uniq --unique |
        tee --append /tmp/buildrequires |
        xargs --delimiter '\n' mkosi-install
done
