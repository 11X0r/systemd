#!/usr/bin/python3

import json
import sys


config = json.load(sys.stdin)

config["QemuArgs"] += ["-device", "ahci,id=ahci0"]

for i in range(4):
    id = f"drivebtrfsbasic{i}"
    config["QemuDrives"] += [
        {
            "Id": id,
            "Size": "350M" if i == 0 else "128M",
            "Options": "cache=unsafe",
        }
    ]
    config["QemuArgs"] += [
        "-device",
        f"ide-hd,bus=ahci0.{i},drive={id},model=foobar,"
        f"serial=deadbeefbtrfs{i}",
    ]

json.dump(config, sys.stdout)
