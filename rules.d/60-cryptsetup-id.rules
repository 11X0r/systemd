# do not edit this file, it will be overwritten on update

ACTION=="remove", GOTO="cryptsetup_id_end"
SUBSYSTEM!="block", GOTO="cryptsetup_id_end"

KERNEL=="dm-*", IMPORT{program}="cryptsetup_id"

ENV{CRYPT_TYPE}=="", GOTO="cryptsetup_id_end"

ENV{CRYPT_DEVICE_SYSNAME}!="", SYMLINK+="disk/by-crypt-device/$env{CRYPT_DEVICE_SYSNAME}"
ENV{CRYPT_METADATA_DEVICE_SYSNAME}!="", SYMLINK+="disk/by-crypt-metadata-device/$env{CRYPT_METADATA_DEVICE_SYSNAME}"
ENV{CRYPT_DATA_DEVICE_SYSNAME}!="", SYMLINK+="disk/by-crypt-data-device/$env{CRYPT_DATA_DEVICE_SYSNAME}"
ENV{CRYPT_HASH_DEVICE_SYSNAME}!="", SYMLINK+="disk/by-crypt-hash-device/$env{CRYPT_HASH_DEVICE_SYSNAME}"

LABEL="cryptsetup_id_end"
