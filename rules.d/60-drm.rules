# do not edit this file, it will be overwritten on update

ACTION!="remove", SUBSYSTEM=="drm", SUBSYSTEMS=="pci|usb|platform", IMPORT{builtin}="path_id"

# by-path
KERNEL=="card*",     ENV{ID_PATH}=="?*",            SYMLINK+="dri/by-path/$env{ID_PATH}-card"
KERNEL=="card*",     ENV{ID_PATH_USB_COMPAT}=="?*", SYMLINK+="dri/by-path/$env{ID_PATH_USB_COMPAT}-card"
KERNEL=="controlD*", ENV{ID_PATH}=="?*",            SYMLINK+="dri/by-path/$env{ID_PATH}-control"
KERNEL=="controlD*", ENV{ID_PATH_USB_COMPAT}=="?*", SYMLINK+="dri/by-path/$env{ID_PATH_USB_COMPAT}-control"
KERNEL=="renderD*",  ENV{ID_PATH}=="?*",            SYMLINK+="dri/by-path/$env{ID_PATH}-render"
KERNEL=="renderD*",  ENV{ID_PATH_USB_COMPAT}=="?*", SYMLINK+="dri/by-path/$env{ID_PATH_USB_COMPAT}-render"
