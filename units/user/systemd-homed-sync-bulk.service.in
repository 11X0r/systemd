[Unit]
Description=Sync Home Area Bulk Directory
Documentation=man:systemd-homed.service(8)
ConditionEnvironment=SYSTEMD_HOME=1
AssertPathIsDirectory=/var/cache/homed/%u/

[Service]
Type=oneshot
ExecStart={{LIBEXECDIR}}/systemd-homed-sync-bulk
Restart=on-failure

[Install]
WantedBy=default.target
