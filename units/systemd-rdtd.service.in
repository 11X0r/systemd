[Unit]
Description=Rdt Service
Documentation=man:systemd-rdtd.service(8) man:rdtd.conf(5)
DefaultDependencies=no
Before=rdt.target

[Service]
Type=notify
OOMScoreAdjust=-1000
Restart=always
RestartSec=0
ExecStart=@rootlibexecdir@/systemd-rdtd
KillMode=mixed
WatchdogSec=3min
TasksMax=infinity
PrivateMounts=yes
MemoryDenyWriteExecute=yes
RestrictRealtime=yes
RestrictAddressFamilies=AF_UNIX AF_NETLINK AF_INET AF_INET6
SystemCallFilter=@system-service @module @raw-io
SystemCallErrorNumber=EPERM
SystemCallArchitectures=native
LockPersonality=yes
IPAddressDeny=any

[Install]
WantedBy=multi-user.target
