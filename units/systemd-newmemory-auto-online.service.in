[Unit]
Description=Enable/Disable automatic onlining of newly added memory
Documentation=man:systemd-newmemory-auto-online.service(8)
DefaultDependencies=no
Before=sysinit.target shutdown.target

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=@rootlibexecdir@/systemd-newmemory-auto-online online
ExecStop=@rootlibexecdir@/systemd-newmemory-auto-online offline
TimeoutSec=90s
